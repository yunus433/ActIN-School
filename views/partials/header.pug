extends ./../partials/head
block content
  .background-image-wrapper
    if backgroundImage && backgroundImage == 1
      image.background-image(src="/res/images/landing_page_image_1.jpg")
    else if backgroundImage && backgroundImage == 2
      image.background-image(src="/res/images/landing_page_image_2.jpg")
    else if backgroundImage && backgroundImage == 3
      image.background-image(src="/res/images/landing_page_image_3.jpg")
    else if backgroundImage && backgroundImage == 4
      image.background-image(src="/res/images/landing_page_image_4.jpg")
    else
      image.background-image(src="/res/images/landing_page_image_1.jpg")
  .all-wrapper
    .all-header
      a.header-logo-wrapper(href="/")
        span ACT'IN
        span school
      .header-bar-wrapper
        a.header-bar-each(href="/aboutus")
          span Hakkımızda
        a.header-bar-each(href="/contact")
          span İletişim
        a.header-bar-each(href="/auth/school/register")
          span Başvur
        a.header-bar-each(href="/auth/school/login")
          span Yönetici Girişi
      .header-login-wrapper
        a.header-login-button(href="/auth/login")
          span Giriş Yap
        a.header-register-button(href="/auth/register")
          span Üye Ol
    .all-header-responsive
      a.header-bar-each(href="/aboutus")
        span Hakkımızda
      a.header-bar-each(href="/contact")
        span İletişim
      a.header-bar-each(href="/auth/school/register")
        span Başvur
      a.header-bar-each(href="/auth/school/login")
        span Yönetici Girişi
    .all-content
      block main
